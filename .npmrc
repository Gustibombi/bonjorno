# pnpm configuration for Bonjorno plugin

# Don't be strict about peer dependencies (Obsidian plugin dependencies may not perfectly match)
strict-peer-dependencies=false

# Automatically install peer dependencies
auto-install-peers=true

# Use shamefully-hoist for better compatibility with some packages
shamefully-hoist=false

# Hoist Obsidian and related packages
public-hoist-pattern[]=*obsidian*
public-hoist-pattern[]=*codemirror*
